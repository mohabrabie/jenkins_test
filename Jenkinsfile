pipeline {
    agent any

    stages {
        stage('Build') {
            // build
            steps {
                // run and build the image
                sh "build and run the image"
            }
        }
        stage('test') {
            steps {
                sh 'testing the application here'
            }
        }
        stage('deploy') {
            steps {
                sh "deploying the application here"
            }
        }
    }
}